@model IEnumerable<BBS.Models.FollowRecord>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FollowUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FollowUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FollowRecordId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FollowRecordId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FollowRecordId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
