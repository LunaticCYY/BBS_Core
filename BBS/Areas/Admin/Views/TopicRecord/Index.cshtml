@model IEnumerable<BBS.Models.TopicRecord>

@{
    ViewData["Title"] = "话题收藏管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>话题收藏管理</h2>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AddTime)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddTime)
            </td>
            <td>
                <a href="~/Topic/@item.TopicId">@Html.DisplayFor(modelItem => item.Topic.Title)</a>
            </td>
            <td>
                <a href="~/Account/UserInfo/@item.UserId">@Html.DisplayFor(modelItem => item.User.UserName)</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.TopicRecordId">详情</a>
            </td>
        </tr>
}
    </tbody>
</table>
