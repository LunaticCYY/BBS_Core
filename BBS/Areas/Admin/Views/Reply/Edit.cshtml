            </div>
            <div class="form-group">
                <label asp-for="IsTopic" class="control-label"></label>
                <select asp-for="IsTopic" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(TopicOrReply))" />
                <span asp-validation-for="IsTopic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <input asp-for="ParentId" class="form-control" />
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
