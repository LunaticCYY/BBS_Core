@model IEnumerable<TopicRecord>

<div class="row" style="margin-top:20px">
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <div class="pull-left">
                    <span class="l">帖子收藏列表</span>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TopicId)
                            </th>
                            <th>
                                收藏时间
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="overflow:hidden;white-space:nowrap;text-overflow:ellipsis;">
                                    <a asp-controller="Topic" asp-action="Index" asp-route-id="@item.TopicId">@Html.DisplayFor(modelItem => item.Topic.Title)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddTime)
                                </td>
                                <td>
                                    <form class="form-horizontal" method="post" asp-controller="Account" asp-action="CancelTopicRecord">
                                        <input type="hidden" name="TopicRecordId" value="@item.TopicRecordId" />
                                        <input type="hidden" name="UserId" value="@item.UserId" />
                                        <input type="hidden" name="TopicId" value="@item.TopicId" />
                                        <input type="hidden" name="AddTime" value="@item.AddTime" />
                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <button type="submit" class="btn btn-default">取消收藏</button>
                                            </div>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>